{
  "include": ["./src"],
  "compilerOptions": {
    "composite": true,
    "target": "es2021",
    "module": "es2020",
    "rootDir": "./src",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist/esm",
    "declarationDir": "./dist/esm",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["./node_modules", "./dist"]
}
